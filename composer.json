{
  "name": "eliashaeussler/composer-update-check",
  "description": "Composer Plugin to check outdated packages, based on their requirements",
  "type": "composer-plugin",
  "license": "GPL-3.0-or-later",
  "homepage": "https://haeussler.dev",
  "authors": [{
    "name": "Elias Häußler",
    "email": "elias@haeussler.dev",
    "homepage": "https://haeussler.dev",
    "role": "Maintainer"
  }],
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": "^7.1",
    "ext-json": "*",
    "composer-plugin-api": "^1.0 || ^2.0",
    "composer/semver": "^1.0 || ^2.0 || ^3.0",
    "guzzlehttp/guzzle": "^6.0 || ^7.0",
    "spatie/emoji": "^2.0"
  },
  "require-dev": {
    "composer/composer": "^1.0 || ^2.0",
    "phpunit/phpunit": "^7.0 || ^8.0 || ^9.0"
  },
  "extra": {
    "class": "EliasHaeussler\\ComposerUpdateCheck\\Plugin"
  },
  "autoload": {
    "psr-4": {
      "EliasHaeussler\\ComposerUpdateCheck\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "EliasHaeussler\\ComposerUpdateCheck\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "phpunit -c phpunit.xml",
    "test:ci": "@php -d pcov.enabled=1 -d pcov.directory=src -d memory_limit=-1 vendor/bin/phpunit -c phpunit.ci.xml",
    "simulate": "bin/simulate-application.sh",
    "docs": "docker-compose -f docs/build/docker-compose.yaml run --rm --service-ports docs"
  }
}
